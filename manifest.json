{
  "manifest_version": 3,
  "name": "Noon 商品价格监测器",
  "description": "监测任何您感兴趣的商品价格变动情况，并在发生变动时弹窗提醒",
  "version": "0.1.0",
  "author": {
    "email": "flytreeleft@crazydan.org"
  },
  "action": {
    "default_icon": "logo-48.png"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "host_permissions": ["https://*.noon.com/*"],
  "permissions": [
    "background",
    "contextMenus",
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "logo-48.png"
  }
}
